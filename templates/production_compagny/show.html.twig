{% extends 'baseApply.html.twig' %}

{% block title %}{{ production_compagny.name }}{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row justify-content-center">
            <h1>{{ production_compagny.name }}</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Adresse</th>
                    <td>{{ production_compagny.address }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ production_compagny.zipCode }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ production_compagny.city }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ production_compagny.phone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ production_compagny.email }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ production_compagny.status }}</td>
                </tr>
                <tr>
                    <th>Siret</th>
                    <td>{{ production_compagny.siret }}</td>
                </tr>
                <tr>
                    <th>Ape</th>
                    <td>{{ production_compagny.ape }}</td>
                </tr>
                <tr>
                    <th>Naf</th>
                    <td>{{ production_compagny.naf }}</td>
                </tr>
                <tr>
                    <th>Capital</th>
                    <td>{{ production_compagny.capital }}</td>
                </tr>
                <tr>
                    <th>PDG</th>
                    <td>{{ production_compagny.ceo }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>{{ production_compagny.logo }}</td>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-lg-6 col-12">
                <a class="btn btn-primary btn-block" href="{{ path('production_compagny_edit', {'id': production_compagny.id}) }}">Modifier</a>
            </div>
            <div class="col-lg-6 col-12">
                {{ include('production_compagny/_delete_form.html.twig') }}
            </div>
        </div>
    </div>




{% endblock %}
